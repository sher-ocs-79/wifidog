<?xml version="1.0" encoding="utf-8"?>
<Templates imagesBasePath="../../../../templates/HTMLeditor/templates/images/">
    <Template title="Default template" image="default.gif">
        <Description>Default template with text.</Description>
        <Html>
            <![CDATA[
                Type the text here.
            ]]>
        </Html>
    </Template>
    <Template title="Two-column-template" image="template2.gif">
        <Description>A template that defines two colums, each one with a title, and some text.</Description>
        <Html>
            <![CDATA[
                <table cellspacing="0" cellpadding="0" width="100%" border="0">
                    <tbody>
                        <tr>
                            <td width="50%">
                                <h3>Left title</h3>
                            </td>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </td>
                            <td width="50%">
                                <h3>Right title</h3>
                            </td>
                        </tr>
                        <tr>
                            <td>Left text.</td>
                            <td>&nbsp;</td>
                            <td>Right text.</td>
                        </tr>
                    </tbody>
                </table>
                <p>More text goes here.</p>
            ]]>
        </Html>
    </Template>
    <Template title="Text and Table" image="table.gif">
        <Description>A title with some text and a table.</Description>
        <Html>
            <![CDATA[
                <p>
                    <table style="FLOAT: right" cellspacing="0" cellpadding="0" width="150" border="1">
                        <tbody>
                            <tr>
                                <td align="center" colspan="3">
                                    <strong>Table title</strong>
                                </td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                            </tr>
                        </tbody>
                    </table>
                    Type the text here.
                </p>
            ]]>
        </Html>
    </Template>
</Templates>